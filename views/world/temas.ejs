<!DOCTYPE html>
<html lang="es">

<head>
  <% include ../world/header/links %>
</head>

<body>

  <%- include('../world/header/header', {data: data}); %>

  <section
    style="padding: 10px; background-color: #f7f7f7; text-align: center; position: -webkit-sticky !important; position: sticky !important; top: 100px !important; z-index: 100 !important;">
    <div>
      <h2 class="mb-0"><b style="color: #13683b; font-size: 35px; padding-left: 15px;">Temas de Interés</b></h2>
    </div>
  </section>



  <section class="ftco-section ftco-about ftco-no-pt ftco-no-pb ftco-counter" id="section-counter">
    <div class="container consult-wrap">
      <br>
      <div class="row">
        <div class="col-md-12">
          <div class="row">           
            <div class="col-md-8" style="line-height: 55px;">
              <!-- <div id="aviso_filtro" style="cursor: pointer;">
                <img src="images/delete.png" alt="" width="20"> Quitar Filtro
              </div> -->

              TRIBUTACIÓN: 6 &nbsp;&nbsp;|&nbsp;&nbsp; DEVOLUCIÓN IMPTOS: 2 &nbsp;&nbsp;|&nbsp;&nbsp;
              MUNICIPIO: 1 &nbsp;&nbsp;|&nbsp;&nbsp; R.R.H.H.: 2
            </div>

            
            <div class="col-md-4" style="float: right !important;">
              <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Buscar tema de interés..." aria-label="search"
                  aria-describedby="basic-addon2" id="txtBuscar" type="text">
                <div class="input-group-append">
                  <button class="btn btn-primary" type="button" id="btnBuscar">
                    &nbsp;&nbsp; <img src="images/lupa.png" alt="O" style="width: 20px"> &nbsp;&nbsp;
                  </button>
                </div>
              </div>
			  
            </div>
          </div>
          <br>
        </div>

        <div class="col-md-12" id="todos">
          <% for(var i=0; i < temas.length; i++) { %>

          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-body">
                  <p><%= temas[i].fechaAbreviada %></p>
                  <a class="card-title">
                    <a href="/detalle?idTema=<%= temas[i].idTema %>">
                      <b><%= temas[i].titulo %></b>
                    </a>
                </div>
              </div>
              <br>
            </div>
          </div>

          <% } %>
        </div>


        <div class="col-md-12" id="filtro">

        </div>

      </div>
    </div>
  </section>
  <br>
  <section class="ftco-intro ftco-no-pb img" style="background-image: url(images/bg_1.jpg); padding: 30px !important;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10 text-center heading-section heading-section-white ftco-animate">
          <h2 class="mb-0">Siempre obtienes la mejor orientación</h2>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section testimony-section">
    <div class="container-fluid px-md-5">
      <a name="contacto"></a>
      <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center heading-section ftco-animate">
          <h2 class="mb-4">Contacto</h2>
        </div>
      </div>
      <div class="row ftco-animate justify-content-center">
        <div class="col-md-12">

          <div class="container">
            <div class="row d-flex mb-5 contact-info justify-content-center" style="color: black;">
              <div class="col-md-10">
                <div class="row mb-5">
                  <div class="col-md-4 text-center d-flex">
                    <div class="border w-100 p-4">
                      <div class="icon">
                        <span class="icon-map-o" style="font-size: 30px; color: #13683B;"></span>
                      </div>
                      <p><span style="font-size: 18px; color: black;"><b>Dirección:</b></span><br><a
                          href="#direccion">Jorge
                          Washington
                          E4-59 y Amazonas Edif.
                          Rocafuerte, Of. 5, sector C.C.Espiral</a>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-4 text-center d-flex">
                    <div class="border w-100 p-4">
                      <div class="icon">
                        <span class="icon-tablet" style="font-size: 30px; color: #13683B"></span>
                      </div>
                      <p><span style="font-size: 18px;"><b>
                            Teléfono:</b></span><br><a href="tel:+022500610">022500610,
                        </a><a href="tel:+0997607812">0997607812</a></p>
                    </div>
                  </div>
                  <div class="col-md-4 text-center d-flex">
                    <div class="border w-100 p-4">
                      <div class="icon">
                        <span class="icon-envelope-o" style="font-size: 30px; color: #13683B"></span>
                      </div>
                      <p><span style="font-size: 18px;"><b>Correo Electrónico:</b></span><br>
                        <a href="mailto:info@adcontur.com">info@adcontur.com</a></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row block-9 justify-content-center mb-5">
              <div class="col-md-10 mb-md-5" id="direccion">
                <br>
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.792600168622!2d-78.49863834909598!3d-0.2057302998491574!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91d59bc4d315f6ab%3A0x910d049c327ce1aa!2sAdcontur%20Soluciones%20Integrales!5e0!3m2!1ses-419!2sec!4v1585854670396!5m2!1ses-419!2sec"
                  style="width: 100%; height: 600px;" frameborder="0" style="border:0;" allowfullscreen=""
                  aria-hidden="false" tabindex="0"></iframe>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>


  <% include ../world/footer/footer %>

  <% include ../world/footer/links %>

  <% include ../world/footer/float %>

  <script>
    $("#aviso_filtro").css("display", "none");

    $("#aviso_filtro").click(function () {
      location.reload();
    });

    $("#btnBuscar").click(function () {
      if ($("#txtBuscar").val().trim() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Oops...',
          text: 'Ingresar un texto para filtrar'
        });
      } else {
        listarTemas();
      }
    });

    function listarTemas() {
      $("#loader").addClass("loading");
      $.ajax({
        url: '/listarTemasInteresFiltro?filtro=' + $("#txtBuscar").val(),
        type: 'GET',
        success: function (json) {
          $("#loader").removeClass("loading").addClass("noloading");
          $("#todos").css("display", "none");
          $("#aviso_filtro").css("display", "block");
          
          var temas = json.resultado;
          var html = "";

          if (temas.length == 0) {
            html += `
            <div>
              <div class="card">
                <div class="card-body" style="text-align: center !important;">
                  <p>No se encontraron coincidencias.</p>
                </div>
              </div>
              <br>
            </div>
            `;
          } else {
            for (let i = 0; i < temas.length; i++) {
              html += `
            <div>
              <div class="card">
                <div class="card-body">
                  <p>`+ temas[i].fechaAbreviada + ` </p>
                  <a class="card-title">
                    <a href="/detalle?idTema=`+ temas[i].idTema + `">
                      <b>`+ temas[i].titulo + `</b>
                    </a>
                </div>
              </div>
              <br>
            </div>
            `;
            }
          }


          $("#filtro").html(html);
          console.log(json);

        }, error: function (xhr, status) {
          alert('Disculpe, existió un problema');
        }
      });
    }
  </script>


</body>

</html>