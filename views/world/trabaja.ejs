                  aria-hidden="false" tabindex="0"></iframe>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
  <div id="loader" class="">Loading&#8230;</div>

  <% include ../world/footer/footer %>

  <% include ../world/footer/links %>

  <% include ../world/footer/float %>

  <script>

    $("#btnEnviar").click(function () {
      event.preventDefault();
      
      if ($("input[name*='identificacion']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar el numero de identificación.'
        });
      } else if ($("input[name*='nombre']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar nombre.'
        });
      } else if ($("input[name*='email']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar Email.'
        });
      } else if ($("input[name*='direccion']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar Dirección.'
        });
      } else if ($("input[name*='telefono']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar Teléfono.'
        });
      } else if ($("input[name*='salario']").val() == "") {
        Swal.fire({
          icon: 'warning',
          title: 'Validación',
          text: 'Ingresar Salario.'
        });
      } else {
        var form = $('#fmrCurriculum')[0];
        var data = new FormData(form);

        $("#loader").addClass("loading");

        $.ajax({
          type: 'POST',
          enctype: 'multipart/form-data',
          url: '/enviarEmailCurriculum',
          data: data,
          processData: false,
          contentType: false,
          cache: false,
          success: function (res) {

            $("#loader").removeClass("loading").addClass("noloading");

            Swal.fire({
              icon: 'success',
              title: 'Éxito',
              text: 'Se envió la solicitud de empleo.'
            });

          }, error: function (xhr, status) {
            $("#loader").removeClass("loading").addClass("noloading");

            Swal.fire({
              icon: 'error',
              title: 'Oops...',
              text: 'Ocurrio un problema, intente nuevamente mas tarde.'
            });

          }
        });
      }

    });

  </script>

</body>

</html>